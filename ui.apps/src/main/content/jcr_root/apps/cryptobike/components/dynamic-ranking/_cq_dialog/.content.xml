<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Dynamic Ranking"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <items jcr:primaryType="nt:unstructured">
         <tabs jcr:primaryType="nt:unstructured"
               sling:resourceType="granite/ui/components/coral/foundation/tabs">
            <items jcr:primaryType="nt:unstructured">
               <heading-tab jcr:primaryType="nt:unstructured"
                            jcr:title="Heading"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <title cq-msm-lockable="./title"
                                  fieldLabel="Title"
                                  jcr:primaryType="nt:unstructured"
                                  name="./title"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <description jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        editorType="text"
                                        fieldLabel="Description"
                                        name="./description"
                                        useFixedInlineToolbar="{Boolean}true">
                              <rtePlugins jcr:primaryType="nt:unstructured">
                                 <format jcr:primaryType="nt:unstructured" features="*" />
                              </rtePlugins>
                              <uiSettings jcr:primaryType="nt:unstructured">
                                 <cui jcr:primaryType="nt:unstructured">
                                    <inline jcr:primaryType="nt:unstructured" toolbar="[format#bold,format#italic,format#underline]"></inline>
                                 </cui> 
                              </uiSettings>
                           </description>
                           <backgroundResType jcr:primaryType="nt:unstructured"
                                              name="./background/sling:resourceType"
                                              sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                              value="core/wcm/components/image/v2/image"/>
                           <background allowUpload="{Boolean}false"
                                       autoStart="{Boolean}false"
                                       class="cq-droptarget"
                                       cq-msm-lockable="./background/file"
                                       fieldLabel="Imagem"
                                       fileNameParameter="./background/fileName"
                                       fileReferenceParameter="./background/fileReference"
                                       jcr:primaryType="nt:unstructured"
                                       mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                       multiple="{Boolean}false"
                                       name="./background/file"
                                       sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                       title="Drag to select image"
                                       uploadUrl="${suffix.path}"
                                       useHTML5="{Boolean}true"/>
                        </items>
                     </column>
                  </items>
               </heading-tab>
               <search-section jcr:primaryType="nt:unstructured"
                               jcr:title="Search Section"
                               sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <searchPlaceholder cq-msm-lockable="./searchPlaceholder"
                                              fieldLabel="Search Placeholder"
                                              jcr:primaryType="nt:unstructured"
                                              name="./searchPlaceholder"
                                              sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <nameOptionLabel cq-msm-lockable="./nameOptionLabel"
                                            fieldLabel="Name Option Label"
                                            jcr:primaryType="nt:unstructured"
                                            name="./nameOptionLabel"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <countryOptionLabel cq-msm-lockable="./countryOptionLabel"
                                               fieldLabel="Country Option Label"
                                               jcr:primaryType="nt:unstructured"
                                               name="./countryOptionLabel"
                                               sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <stateOptionLabel cq-msm-lockable="./stateOptionLabel"
                                             fieldLabel="State Option Label"
                                             jcr:primaryType="nt:unstructured"
                                             name="./stateOptionLabel"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <cityOptionLabel cq-msm-lockable="./cityOptionLabel"
                                            fieldLabel="City Option Label"
                                            jcr:primaryType="nt:unstructured"
                                            name="./cityOptionLabel"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        </items>
                     </column>
                  </items>
               </search-section>
               <search-section-mobile jcr:primaryType="nt:unstructured"
                                      jcr:title="Search Section Mobile"
                                      sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <mobileDropDownTitle cq-msm-lockable="./mobileDropDownTitle"
                                                fieldLabel="Mobile Dropdown Title"
                                                jcr:primaryType="nt:unstructured"
                                                name="./mobileDropDownTitle"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <mobileSelectButton cq-msm-lockable="./mobileSelectButton"
                                               fieldLabel="Mobile Dropdown Select Button"
                                               jcr:primaryType="nt:unstructured"
                                               name="./mobileSelectButton"
                                               sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <mobileCancelButton cq-msm-lockable="./mobileCancelButton"
                                               fieldLabel="Mobile Dropdown Cancel Button"
                                               jcr:primaryType="nt:unstructured"
                                               name="./mobileCancelButton"
                                               sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        </items>
                     </column>
                  </items>
               </search-section-mobile>
               <ranking-tab jcr:primaryType="nt:unstructured"
                            jcr:title="Ranking"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <columnRank cq-msm-lockable="./columnRank"
                                       fieldLabel="Column Rank"
                                       jcr:primaryType="nt:unstructured"
                                       name="./columnRank"
                                       sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <columnName cq-msm-lockable="./columnName"
                                       fieldLabel="Column Name"
                                       jcr:primaryType="nt:unstructured"
                                       name="./columnName"
                                       sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <columnCountry cq-msm-lockable="./columnCountry"
                                          fieldLabel="Column Country"
                                          jcr:primaryType="nt:unstructured"
                                          name="./columnCountry"
                                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <columnDistance cq-msm-lockable="./columnDistance"
                                           fieldLabel="Column Distance"
                                           jcr:primaryType="nt:unstructured"
                                           name="./columnDistance"
                                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <notFoundTitle cq-msm-lockable="./notFoundTitle"
                                          fieldLabel="Not Found Title"
                                          jcr:primaryType="nt:unstructured"
                                          name="./notFoundTitle"
                                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <notFoundDescription cq-msm-lockable="./notFoundDescription"
                                                fieldLabel="Not Found Description"
                                                jcr:primaryType="nt:unstructured"
                                                name="./notFoundDescription"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        </items>
                     </column>
                  </items>
               </ranking-tab>
            </items>
         </tabs>
      </items>
   </content>
</jcr:root>
