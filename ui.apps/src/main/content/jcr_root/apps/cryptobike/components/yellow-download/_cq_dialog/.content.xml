<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Download App Yellow"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container">
      <items jcr:primaryType="nt:unstructured">
         <tabs jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/tabs">
            <items jcr:primaryType="nt:unstructured">
               <main-content jcr:primaryType="nt:unstructured"
                             jcr:title="Content"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns" />
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <title cq-msm-lockable="./title"
                                  fieldLabel="Title"
                                  jcr:primaryType="nt:unstructured"
                                  name="./title"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
                           <description cq-msm-lockable="./description"
                                        fieldLabel="Description"
                                        jcr:primaryType="nt:unstructured"
                                        name="./description"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea" />
                           <backgroundResType jcr:primaryType="nt:unstructured" name="./background/sling:resourceType" sling:resourceType="granite/ui/components/coral/foundation/form/hidden" value="core/wcm/components/image/v2/image" />
                           <background allowUpload="{Boolean}false"
                                       autoStart="{Boolean}false"
                                       class="cq-droptarget"
                                       cq-msm-lockable="./background/file"
                                       fieldLabel="Background"
                                       fileNameParameter="./background/fileName"
                                       fileReferenceParameter="./background/fileReference"
                                       jcr:primaryType="nt:unstructured"
                                       mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                       multiple="{Boolean}false"
                                       name="./background/file"
                                       sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                       title="Drag to select image"
                                       uploadUrl="${suffix.path}"
                                       useHTML5="{Boolean}true" />
                           <backgroundMobileResType jcr:primaryType="nt:unstructured" name="./backgroundMobile/sling:resourceType" sling:resourceType="granite/ui/components/coral/foundation/form/hidden" value="core/wcm/components/image/v2/image" />
                           <backgroundMobile allowUpload="{Boolean}false"
                                             autoStart="{Boolean}false"
                                             class="cq-droptarget"
                                             cq-msm-lockable="./backgroundMobile/file"
                                             fieldLabel="Background Mobile"
                                             fileNameParameter="./backgroundMobile/fileName"
                                             fileReferenceParameter="./backgroundMobile/fileReference"
                                             jcr:primaryType="nt:unstructured"
                                             mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                             multiple="{Boolean}false"
                                             name="./backgroundMobile/file"
                                             sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                             title="Drag to select image"
                                             uploadUrl="${suffix.path}"
                                             useHTML5="{Boolean}true" />
                        </items>
                     </column>
                  </items>
               </main-content>
               <stores jcr:primaryType="nt:unstructured" jcr:title="Smartphone Stores" sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns" />
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <iosLabel cq-msm-lockable="./iosLabel"
                                     fieldLabel="App Store Label"
                                     jcr:primaryType="nt:unstructured"
                                     name="./iosLabel"
                                     useFixedInlineToolbar="{Boolean}true"
                                     sling:resourceType="cq/gui/components/authoring/dialog/richtext">
                              <rtePlugins jcr:primaryType="nt:unstructured">
                                 <format jcr:primaryType="nt:unstructured" features="bold" />
                              </rtePlugins>
                              <uiSettings jcr:primaryType="nt:unstructured">
                                 <cui jcr:primaryType="nt:unstructured">
                                    <inline jcr:primaryType="nt:unstructured" toolbar="[format#bold]"></inline>
                                 </cui> 
                              </uiSettings>  
                           </iosLabel>
                           <iosUrl cq-msm-lockable="./iosUrl"
                                   fieldLabel="App Store URL"
                                   jcr:primaryType="nt:unstructured"
                                   name="./iosUrl"
                                   sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
                           <androidLabel cq-msm-lockable="./androidLabel"
                                         fieldLabel="Play Store Label"
                                         jcr:primaryType="nt:unstructured"
                                         name="./androidLabel"
                                         useFixedInlineToolbar="{Boolean}true"
                                         sling:resourceType="cq/gui/components/authoring/dialog/richtext">
                              <rtePlugins jcr:primaryType="nt:unstructured">
                                 <format jcr:primaryType="nt:unstructured" features="bold" />
                              </rtePlugins>
                              <uiSettings jcr:primaryType="nt:unstructured">
                                 <cui jcr:primaryType="nt:unstructured">
                                    <inline jcr:primaryType="nt:unstructured" toolbar="[format#bold]"></inline>
                                 </cui> 
                              </uiSettings>  
                           </androidLabel>
                           <androidUrl cq-msm-lockable="./androidUrl"
                                       fieldLabel="Play Store URL"
                                       jcr:primaryType="nt:unstructured"
                                       name="./androidUrl"
                                       sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
                        </items>
                     </column>
                  </items>
               </stores>
            </items>
         </tabs>
      </items>
   </content>
</jcr:root>
